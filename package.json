{
  "name": "svelte-partial-vite",
  "version": "0.0.0",
  "scripts": {
    "dev": "pnpm build:client && pnpm build:server && node server.mjs",
    "dev:prod": "cross-env NODE_ENV=production pnpm build:client && cross-env NODE_ENV=production pnpm build:server && cross-env NODE_ENV=production node server.mjs",
    "build": "vite build",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.ts",
    "serve": "vite preview --debug"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "next",
    "esbuild": "~0.9.7",
    "morphdom": "^2.6.1",
    "nanoid": "^3.1.22",
    "rollup": "^2.44.0",
    "svelte": "^3.35.0",
    "svelte-preprocess": "^4.6.9",
    "typescript": "^4.2.3",
    "vite": "^2.1.5"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "sirv": "^1.0.11"
  },
  "peerDependencies": {
    "svelte": "^3.37.0",
    "vite": "^2.1.5"
  }
}